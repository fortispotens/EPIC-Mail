{
    "swagger": "2.0",
    "title": "API Documentation",
    "description": "API Documentation for EPIC-Mail Application",
    "version": "1.0.0",
    "host": "localhost:5000",
    "basePath": "/api/v1/",
    "tags": [
        {
            "name": "EPIC-Mail",
            "description": "API Documentation for EPIC-Mail Application"
        }
    ],
    "schemes": ["http"],
    "consumes": ["application/json"],
    "produces": ["application/json"],
    "paths": {
        "/auth/signup": {
            "post": {
                "tags": ["User"],
                "summary": "API Endpoint to signup a new user",
                "description": "Signup a new user",
                "parameters": [
                    {
                        "name": "user",
                        "description": "User params for signup",
                        "in": "body",
                        "required": "true",
                        "schema": {
                            "$ref": "#definitions/User"
                        }
                    }
                ],
                "produces": ["application/json"],
                "responses":{
                    "200": {
                        "description": "Account created successfully",
                        "schema":{
                            "$ref":"#definitions/User"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "User": {
            "required": ["id", "email", "firstName", "lastName", "password"],
            "properties": {
                "id": {
                    "type": "integer"
                },
                "email": {
                    "type": "string"
                },
                "firstName": {
                    "type": "string"
                },
                "lastName": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                }
            }
        }
    }
}
