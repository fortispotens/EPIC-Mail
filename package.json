{
  "name": "server",
  "version": "1.0.0",
  "description": "Node.js server for EPIC-Mail",
  "main": "server.js",
  "scripts": {
    "start": "nodemon --exec babel-node server/server.js",
    "lint": "./node_modules/.bin/eslint server/test/*.js",
    "test": "nyc ./node_modules/.bin/_mocha --require @babel/register --watch server/test/*.js --timeout 10s --exit",
    "coverage": "nyc --reporter=lcov --reporter=html --reporter=text ./node_modules/.bin/_mocha",
    "coveralls": "cat ./coverage/lcov.info | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/riseagain47/EPIC-Mail.git"
  },
  "keywords": [
    "EPIC-Mail",
    "Challenge 2",
    "Backend",
    "Node.js"
  ],
  "author": "Tobechukwu Obitube",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/riseagain47/EPIC-Mail/issues"
  },
  "homepage": "https://github.com/riseagain47/EPIC-Mail#readme",
  "dependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "expect": "^24.3.1",
    "express": "^4.16.4",
    "mocha": "^6.0.2",
    "moment": "^2.24.0",
    "request": "^2.88.0",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.4",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.3.4",
    "babel-plugin-istanbul": "^5.1.1",
    "coveralls": "^3.0.3",
    "cross-env": "^5.2.0",
    "eslint": "^5.15.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "istanbul": "^0.4.5",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.18.10",
    "nyc": "^13.3.0"
  }
}
